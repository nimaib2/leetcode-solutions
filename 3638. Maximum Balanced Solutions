class Solution {
    public int maxBalancedShipments(int[] weight) {
        int shipments=0;
        int max=0;
        for(int i=0; i<weight.length-1; i++){
            if(weight[i]>=max){
                max=weight[i];
                if(weight[i]>weight[i+1]){
                    shipments++;
                    i++;
                    max=0;
                }
            }
        }
        return shipments;
    }
}
