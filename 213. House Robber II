class Solution {
    public int rob(int[] nums) {
        if(nums.length<=1){
            return nums[0];
        }
        return Math.max(helpRob(Arrays.copyOfRange(nums, 0, nums.length-1)), helpRob(Arrays.copyOfRange(nums, 1, nums.length)));
    }

    private int helpRob(int[] nums){
        int n=nums.length;
        int[] dp = new int[n+1];
        dp[1]=nums[0];
        for(int i=1; i<nums.length; i++){
            dp[i+1]=Math.max(dp[i], nums[i]+dp[i-1]);
        }
        return dp[dp.length-1];
    }
}
